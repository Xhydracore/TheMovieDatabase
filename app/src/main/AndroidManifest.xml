<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xhydracore.themoviedatabase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieDatabase.NoActionBar"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.activities.BookmarkActivity"
            android:label="@string/title_activity_bookmark"
            android:theme="@style/Theme.TheMovieDatabase.NoActionBar.NoActionBar"></activity>
        <activity android:name=".ui.activities.DetailActivity" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>